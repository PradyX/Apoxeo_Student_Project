<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApoxeoStudentProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowLightStatusBar" tools:targetApi="27">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@android:color/white</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <!--            <item name="cornerFamily">cut</item>-->
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerSize">4dp</item>

    </style>

    <style name="bottomAppBar">
        <item name="backgroundTint">@android:color/background_light</item>
        <item name="tint">@android:color/darker_gray</item>
    </style>
</resources>